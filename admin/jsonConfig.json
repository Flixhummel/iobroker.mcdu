{
  "i18n": true,
  "type": "tabs",
  "items": {
    "mqtt": {
      "type": "panel",
      "label": "MQTT Connection",
      "icon": "data:image/svg+xml;base64,",
      "items": {
        "mqtt.broker": {
          "type": "text",
          "label": "Broker Address",
          "placeholder": "10.10.5.149",
          "sm": 12,
          "md": 6
        },
        "mqtt.port": {
          "type": "number",
          "label": "Port",
          "min": 1,
          "max": 65535,
          "sm": 12,
          "md": 6
        },
        "mqtt.username": {
          "type": "text",
          "label": "Username",
          "sm": 12,
          "md": 6
        },
        "mqtt.password": {
          "type": "password",
          "label": "Password",
          "sm": 12,
          "md": 6
        },
        "mqtt.topicPrefix": {
          "type": "text",
          "label": "Topic Prefix",
          "placeholder": "mcdu",
          "sm": 12,
          "md": 6
        }
      }
    },
    "pages": {
      "type": "panel",
      "label": "Pages",
      "icon": "data:image/svg+xml;base64,",
      "items": {
        "_pagesHelp": {
          "type": "staticText",
          "text": "Define your MCDU pages here. Each page can have up to 13 content lines (line 14 is the scratchpad).",
          "style": {
            "fontSize": "0.9em",
            "color": "#666",
            "marginBottom": "16px"
          }
        },
        "pages": {
          "type": "table",
          "label": "Pages Configuration",
          "sm": 12,
          "clone": true,
          "noDelete": false,
          "showSecondAddAt": 3,
          "items": [
            {
              "type": "text",
              "title": "Page ID",
              "attr": "id",
              "width": "15%",
              "filter": true,
              "sort": true,
              "validator": "data.id && data.id.match(/^[a-z0-9-]+$/)",
              "validatorErrorText": "Only lowercase letters, numbers, and hyphens allowed"
            },
            {
              "type": "text",
              "title": "Page Name",
              "attr": "name",
              "width": "20%",
              "filter": true,
              "sort": true
            },
            {
              "type": "select",
              "title": "Parent Page",
              "attr": "parent",
              "width": "15%",
              "options": [],
              "default": null
            },
            {
              "type": "checkbox",
              "title": "Enabled",
              "attr": "enabled",
              "width": "8%",
              "default": true
            },
            {
              "type": "jsonEditor",
              "title": "Lines (JSON)",
              "attr": "lines",
              "width": "30%",
              "default": [],
              "validateJson": true,
              "button": true,
              "label": "Edit Lines"
            }
          ]
        }
      }
    },
    "display": {
      "type": "panel",
      "label": "Display",
      "icon": "data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSIyNCIgaGVpZ2h0PSIyNCIgdmlld0JveD0iMCAwIDI0IDI0Ij48cGF0aCBkPSJNMjEgMkg0Yy0xLjEgMC0yIC45LTIgMnYxMmMwIDEuMS45IDIgMiAyaDZ2Mmg4di0yaDF2LTJINFY0aDE2djEyaC0xdjJoMWMxLjEgMCAyLS45IDItMlY0YzAtMS4xLS45LTItMi0yeiIvPjwvc3ZnPg==",
      "items": {
        "display.defaultColor": {
          "type": "select",
          "label": "Default Text Color",
          "options": [
            {"label": "White", "value": "white"},
            {"label": "Green", "value": "green"},
            {"label": "Blue", "value": "blue"},
            {"label": "Amber", "value": "amber"},
            {"label": "Red", "value": "red"}
          ],
          "sm": 12,
          "md": 6
        },
        "display.columns": {
          "type": "number",
          "label": "Columns",
          "min": 1,
          "max": 48,
          "readOnly": true,
          "sm": 12,
          "md": 3
        },
        "display.rows": {
          "type": "number",
          "label": "Rows",
          "min": 1,
          "max": 20,
          "readOnly": true,
          "sm": 12,
          "md": 3
        }
      }
    },
    "performance": {
      "type": "panel",
      "label": "Performance",
      "icon": "data:image/svg+xml;base64,",
      "items": {
        "performance.renderThrottle": {
          "type": "number",
          "label": "Render Throttle (ms)",
          "help": "Minimum time between display updates",
          "min": 10,
          "max": 1000,
          "unit": "ms",
          "sm": 12,
          "md": 6
        },
        "performance.maxQueueSize": {
          "type": "number",
          "label": "Max Queue Size",
          "help": "Maximum number of pending render requests",
          "min": 10,
          "max": 1000,
          "sm": 12,
          "md": 6
        }
      }
    },
    "advanced": {
      "type": "panel",
      "label": "Advanced",
      "icon": "data:image/svg+xml;base64,",
      "items": {
        "debug.enabled": {
          "type": "checkbox",
          "label": "Enable Debug Logging",
          "sm": 12
        },
        "debug.logMqtt": {
          "type": "checkbox",
          "label": "Log MQTT Messages",
          "hidden": "!data.debug || !data.debug.enabled",
          "sm": 12
        }
      }
    }
  }
}
